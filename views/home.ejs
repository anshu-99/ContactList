<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/a5f47a3b96.js" crossorigin="anonymous"></script>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/myHome.css">
</head>
<body>
<header>
    <button onclick="toggleDarkTheme()" id="theme" style="transition: background-color 0.8s;">
        <i class="fas fa-moon"></i>&nbsp;Dark Mode
      </button>
    <center>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contacts List
        </h1>
    </center>
</header>
    <div class="container">
        <div id="nameList">
            <ol>
                <% for(let i of contact_list){ %>
                <li>
                    <div class="details">
                        <p>
                            <i class="fa-solid fa-user"></i>
                            <%= i.firstName %>
                            <%= i.lastName %><br>
                            <%= i.email %><br>
                            <%= i.phoneNumber %><br>
                        </p>
                    </div>
                    <!-- <div class="deletebtn">
                        <a href="/delete-contact/?id = <%= i._id %>">
                            <i class="fa-solid fa-trash-can" style="color: red;"></i>
                            Delete
                        </a>
                    </div> -->
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i.id%>">
                            <i class="fa-solid fa-trash-can" style="color: red;"></i>
                            Delete
                        </a>
                      </div>
                </li>
                <% } %>
            </ol>
        </div>
        <form action="/create-contact" method="post" id="contactForm">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required><br><br>

            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required><br><br>

            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" required><br><br>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>

            <input type="submit" value="Add">
        </form>
    </div>

    <script>
        function toggleDarkTheme() {
          var body = document.body;
          var themeButton = document.getElementById("theme");
      
          // Check if the body has the 'dark-theme' class
          if (body.classList.contains("dark-theme")) {
            // Remove the 'dark-theme' class
            body.classList.remove("dark-theme");
            // Reset the button text
            themeButton.innerHTML = '<i class="fas fa-moon"></i>&nbsp;Dark Mode';
          } else {
            // Add the 'dark-theme' class
            body.classList.add("dark-theme");
            // Change the button text
            themeButton.innerHTML = '<i class="fas fa-sun"></i>&nbsp;Light Mode';
          }
        }
      </script>
      </body>
      </html>     
</body>
</html>
